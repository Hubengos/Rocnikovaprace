<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral90"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nadpisAplikace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJDI"
        android:textSize="40sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/podNadpisAplikace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikace pro výuku matematiky"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/holo_red_dark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:fontFamily="@font/bebas_neue"
            android:text="Hlavní stránka"
            android:textColor="#6200ED"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/financniMatematika"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Finanční matematika"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podNadpisAplikace" />

    <Button
        android:id="@+id/posloupnosti"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:fontFamily="@font/bebas_neue"
        android:layout_marginTop="64dp"
        android:textSize="30sp"
        android:text="Posloupnosti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kombinatorikaTlacitko"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/kombinatorikaTlacitko"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Kombinatorika"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/financniMatematika" />


</androidx.constraintlayout.widget.ConstraintLayout>

