<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".financeJednoduche"
    >


    <TextView
        android:id="@+id/vysledekJednoducheUroceni"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/bebas_neue"
        android:text=""
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vypocitatVysledek"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/vysledekJednoducheUroceni2"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/bebas_neue"
        android:text=""
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vysledekJednoducheUroceni"
        app:layout_constraintVertical_bias="0.043"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/vypocitatVysledek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:textSize="20sp"
        android:text="Vypočítej"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pocetRoku"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/jednoducheuroceni"
        android:fontFamily="@font/bebas_neue"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/sazba"
        android:layout_width="236dp"
        android:layout_height="67dp"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Roční úroková sazba"
        android:inputType="numberSigned"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kapital"
        app:layout_constraintVertical_bias="0.079"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/pocetRoku"
        android:layout_width="236dp"
        android:layout_height="67dp"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:inputType="numberSigned"
        android:hint="Počet úrokovacích období"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sazba"
        app:layout_constraintVertical_bias="0.112"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/kapital"
        android:layout_width="236dp"
        android:layout_height="67dp"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Počáteční kapitál"
        android:inputType="numberSigned"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.073"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/holo_red_dark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <!-- obrazek zatim neni ready
        <ImageView
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_menu_24" />
-->
        <Button
            android:id="@+id/zpet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebas_neue"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="Zpět" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:fontFamily="@font/bebas_neue"
            android:text="Jednoduché úročení"
            android:textColor="#6200ED"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:text="Výsledný kapitál"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/vysledekJednoducheUroceni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vypocitatVysledek"
        app:layout_constraintVertical_bias="0.625" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:text="ZISK"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/vysledekJednoducheUroceni2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vysledekJednoducheUroceni"
        app:layout_constraintVertical_bias="0.543" />


</androidx.constraintlayout.widget.ConstraintLayout>